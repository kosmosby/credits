<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
	>
		<field
				name="id"
				type="hidden"
				/>

		<field
				name="name"
				type="text"
				label="Имя работника"
				description="Имя работника"
				size="40"
				class="inputbox"
				required="true"
				default=""
		/>

		<field
				name="user_id"
				type="sql"
				default="10"
				label="Имя в системе"
				query="SELECT id AS value, name AS user_id  FROM #__users"
				header="Выберите опцию"
				required="true"
		/>
	</fieldset>
</form>
